<MainView>
    cols: 1
    StackLayout:
        height: 700
        Label:
            text: "Resources"
            size_hint: 1, .1
        GridLayout:
            id: resources
            cols: 1
            size_hint: 1, .8
            height: 450
            size_hint_y: None
            canvas.before:
                Color:
                    rgba: 180/255, 180/255, 180/255, 0.15
                Rectangle:
                    pos: self.pos
                    size: self.size
        GridLayout:
            size_hint: 1, .1
            size_hint_min_y: 50
            rows: 1
            Button:
                text: "Add resources"
            Button:
                text: "Evaluate wallet"
                on_press: root.evaluateWallet()
            TextInput:
                id: wallet_percentage
            Label:
                id: wallet_value
                text: ""